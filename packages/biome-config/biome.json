{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "root": false,
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "json": {
    "parser": {
      "allowTrailingCommas": true,
      "allowComments": true
    },
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "indentStyle": "space",
      "lineWidth": 100,
      "operatorLinebreak": "before",
      "trailingCommas": "es5"
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": { "enabled": true, "indentStyle": "space" }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
